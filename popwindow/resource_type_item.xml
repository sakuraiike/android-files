    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/resource_type_item_bg_selected"
        android:layout_height="3dp">
    </LinearLayout>
    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:id="@+id/resource_type_button"
        android:background="@drawable/resource_type_item_bg"
        android:text="文本资源"
        android:textSize="25dp"
        android:textColor="@color/resource_type_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>